{
    "container": {
        "name": "transfer-default-notebook"
    },

    "image" : {
        "name" : "transfer-default-image"
    },

    "volume": {
        "host-directory" : "<replace with host workspace directory>",
        "mount-point" : "/tf/inside-work"
    },

    "commit": {
        "name": "bare-notebook:latest",
        "repo": "crazy.io"
    },

    "ports": {
        "public" : [8080],
        "jupyter" : 8080
    },

    "gpu": {
        "gpus" : "all",
        "ulimit" : ["memlock=-1", "stack=67108864"]
    },

    "docker": {
        "options": {
            "--ipc": "host"
        }
    }
}
